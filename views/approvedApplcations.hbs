<!DOCTYPE html>
<html>
<head>
    <title>Product Page</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <style>
        .product-container {
            max-width: 800px;
            margin:  auto;
            margin-top: 50px;
            left:0;
        }
        .product-row {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
        }
        .product-row img {
            cursor: pointer;
            max-width: 100px;
            margin-right: 10px;
        }
        .modal-image {
            max-width: 100%;
            max-height: 80vh;
        }
        
        .sidebar {
            height: 100vh;
            width: 300px;
            position: fixed;
            top: 10;
            left: 0;
            background-color: #060b0f;
            padding: 20px;
        }

        .nav-item {
            margin-bottom: 10px;
        }

        .nav-link {
            color: #ffffff;
            text-decoration: none;
        }
    </style>
</head>
<body>
    
    <div class="sidebar">
        <ul class="nav flex-column">
           <li class="nav-item">
                <a class="nav-link" href="/superAdminHome">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/AdvertisementApplication">Pending Applications</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/approveedApplications">Approved Applications</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Removed  Application</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">meaow</a>
            </li>
        </ul>
    </div>

    <div class="container product-container">
        <h2>Approved Applications</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>merchant name</th>
                    <th>Add Name</th>
                    <th>Category</th>
                    <th>Image</th>
                </tr>
            </thead>
            {{#each adds}}
            <tbody>
                <tr>
                    <td>{{this.res.[0].Name}}</td>
                    <td>{{this.Name}}</td>
                    <td>{{this.Category}}</td>
                    <td>
                        <img style="width:60px;height:60px" src="/images/{{this._id}}.jpg" alt="{{this.Name}}" data-toggle="modal" data-target="#imageModal">
                    </td>
                    <td>
                        <a href='/addapproved?addId={{this._id}}' class="btn btn-success">Approve</a>
                    </td>
                    <td>
                        <a href='/addrejected?addId={{this._id}}' class="btn btn-danger">Reject</a>
                    </td>
                    <td><a class="btn btn-success" href='/displayAddProducts?add={{this._id}}'>Show  products</a></td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="imageModal" tabindex="-1" role="dialog" aria-labelledby="imageModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-body text-center">
                    <img class="modal-image" src="">
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script>
        $(document).ready(function() {
            $('img').click(function() {
                var imageSrc = $(this).attr('src');
                $('.modal-image').attr('src', imageSrc);
            });
        });
    </script>
</body>
</html>
