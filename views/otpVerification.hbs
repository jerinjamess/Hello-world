<!DOCTYPE html>
<html>
<head>
  <title>OTP Verification</title>
  <link rel="stylesheet" type="text/css" href="style.css">
  <style>
    body {
      background-color: #f5f5f5;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
      font-family: Arial, sans-serif;
    }

    .container {
      background-color: #fff;
      padding: 30px;
      border-radius: 8px;
      box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.1);
      text-align: center;
    }

    h1 {
      color: #333;
    }

    .otp-input {
      margin: 20px 0;
    }

    input[type="text"] {
      width: 80px;
      height: 40px;
      font-size: 24px;
      text-align: center;
      border: 2px solid #ddd;
      border-radius: 4px;
      margin: 0 5px;
    }

    .instruction {
      color: #777;
      font-size: 14px;
    }

    .verify-btn {
      background-color: #007bff;
      color: #fff;
      padding: 10px 20px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      font-size: 16px;
      transition: background-color 0.3s;
    }

    .verify-btn:hover {
      background-color: #0056b3;
    }
  </style>
  
    <script>
    function showMessage() {
      alert("Please enter the coorect otp");
    }
     function showMessage2() {
      alert("An otp has been sent to your registered mail id");
    }
    var status=true
    var err = {{ verification }};
    window.onload = function() {
         if (status==true){
        
        showMessage2();
      }
      if (err==false){
        
        showMessage();
      }
      
    };
  </script>
</head>
<body>
  <div class="container">
    <h1>OTP Verificatiozzzn</h1>
    <form action="/Verification?otp={{otp}}&merchant_id={{merchant.merchant_id}}&Name={{merchant.Name}}&email={{merchant.email}}&pincode={{merchant.pincode}}&gpay={{merchant.gpay}}&pw={{merchant.pw}}&shop={{merchant.shop}}" method="post">
      <div class="otp-input">
        <input type="text" name="otp" maxlength="4" />
      </div>
      <p class="instruction">Please enter the 4-digit OTP to confirm the merchant.</p>
      <button class="verify-btn" type="submit">Verify</button>
    </form>
  </div>
</body>
</html>
