  <section>
      <div class=container>

          <div class="row">
              <a href="/admin/add-application" class=" ml-auto mt-4">Provide Advertisement</a>
        </div>
                <h2> Applications</h2>
        
      <table class="table mt-3">
    <thead>
      <tr>
        <th scope="col">No</th>
        <th scope="col">Name</th>
        <th scope="col">Category</th>
         <th scope="col"></th>
        <th scope="col">Status</th>
     
      
      </tr>
    </thead>
    
    <tbody>
      {{#each adds}}
      <tr>
        <th scope="row">1</th>
        <td>{{this.Name}}</td>
        <td>{{this.Category}}</td>
        <td>{{this.Description}}</td>
      
      <td>{{this.status}}</td>
        <td><a class="btn btn-success" href='/displayAddProducts?add={{this._id}}'>Advertisement products</a></td>
        
      </tr>
      {{/each}}
  
      </div>
    </tbody>
  </table>

  </section>